#:import C kivy.utils.get_color_from_hex

GlownyElement:

<GlownyElement>:
    padding: "-2dp"
    orientation: "vertical"
    canvas.before:
        Color:
            rgb: C('#efefef')
        Rectangle:
            size: self.size
            pos: self.pos
    Taby:
    Stopka:

<Stopka>:
    size_hint: 1, None
    height: "50dp"
    padding: "0dp"
    orientation: "horizontal"
    spacing: "0dp"
    Button:
        text: "EXIT"
        size_hint: 1, None
        height: "50dp"

<Taby>:
    tab_pos: "top_left"
    do_default_tab: False
    tab_height: "50dp"
    tab_width: root.width/3
    TabbedPanelItem:
        font_size: "12dp"
        text: "Wyszukaj"
        font_name: "fonts/Roboto-Medium.ttf"
        Widok:
    TabbedPanelItem:
        font_size: "12dp"
        text: "Witaminy"
        font_name: "fonts/Roboto-Medium.ttf"   
        Widok2:     
    TabbedPanelItem:
        font_size: "12dp"
        text: "Konserwanty"
        font_name: "fonts/Roboto-Medium.ttf"   
        Widok2:     

<Widok>:
    orientation: "vertical"
    spacing: "5dp"
    padding: "50dp"
    canvas:
        Color:
            rgba: C('#efefef')
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        height: 80
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)
        TextInput:
            text: "Wpisz nazwę"
            multiline: False
        Button:
            text: "Wyszukaj"
            font_name: "fonts/Roboto-Medium.ttf"
    Label:
        text: "Wyniki:"
        font_name: "fonts/Roboto-Medium.ttf"
        color: C("#993366")


<Wynik>:
    height: 80
    orientation: 'horizontal'
    padding: 20
    spacing: 20
    size_hint: (1, None)
    Label:
        text: root.name
        color: C("#993366")
        markup: True
    Label:
        text: root.producer
        color: C("#993366")
    Button:
        text: "Przejdź"
        font_name: "fonts/Roboto-Medium.ttf"

<Widok2>:
    orientation: "vertical"
    spacing: "5dp"
    padding: "5dp"
    canvas:
        Color:
            rgba: C('#efefef')
        Rectangle:
            size: self.size
            pos: self.pos
        
